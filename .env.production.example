# Production Environment Variables for Ourdm
# Copy this to .env.production for deployment

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# App Configuration
VITE_APP_NAME=Ourdm
VITE_APP_VERSION=3.0.0
VITE_APP_URL=https://ourdm.vercel.app

# Feature Flags (Set to 'true' or 'false')
VITE_ENABLE_CALLS=true
VITE_ENABLE_STORIES=true
VITE_ENABLE_GROUPS=true
VITE_ENABLE_BROADCAST=true

# Metered TURN Configuration (for WebRTC calls)
VITE_METERED_API_KEY=your-metered-api-key
VITE_METERED_API_URL=https://ourdm.metered.live/api/v1/turn/credentials

# Analytics (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_GA_TRACKING_ID=

# Debug (Set to 'false' in production)
VITE_DEBUG=false
VITE_LOG_LEVEL=error
